<UserControl x:Class="GameBase.Views.Characters.AtorView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
	
	<Grid>
		<Image Height="96" Width="96">
			<Image.Source>
				<MultiBinding Converter="{StaticResource FrameBitmapConverter}">
					<Binding Path="Resource" />
					<Binding Path="FrameAtual" />
					<Binding Path="DirecaoAtual" />
					<Binding Path="Largura" />
					<Binding Path="Altura" />
				</MultiBinding>
	        </Image.Source>
		</Image>
	</Grid>
</UserControl>